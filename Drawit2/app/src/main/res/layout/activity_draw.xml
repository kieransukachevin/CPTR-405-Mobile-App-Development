<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/activity_draw_container">

    <edu.wallawalla.cs.sukaki.drawit2.Drawit
        android:id="@+id/canvas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="84dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/seekBar" />
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="300px"
        app:layout_constraintBottom_toBottomOf="parent">

        <ImageButton
            android:id="@+id/sizeButton"
            android:layout_width="120px"
            android:layout_height="120px"
            android:text="size"
            android:background="@drawable/size_button"
            android:layout_alignParentLeft="true"
            android:layout_alignBottom="@id/colorButton" />

        <ImageButton
            android:id="@+id/colorButton"
            android:layout_width="120px"
            android:layout_height="120px"
            android:text="color"
            android:background="@drawable/color_button"
            android:layout_centerInParent="true" />

        <ImageButton
            android:id="@+id/penButton"
            android:layout_width="120px"
            android:layout_height="120px"
            android:text="color"
            android:background="@drawable/pen_button"
            android:layout_alignParentRight="true"
            android:layout_alignBottom="@id/colorButton"/>
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>