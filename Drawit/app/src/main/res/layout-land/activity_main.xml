<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/welcomeMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/welcome_to_drawit"
        style="@style/Text"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <Spinner
        android:id="@+id/optionsTab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:max="50"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/welcomeMessage" />

    <Spinner
        android:id="@+id/colorTab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:max="50"
        app:layout_constraintLeft_toRightOf="@id/optionsTab"
        app:layout_constraintTop_toBottomOf="@id/welcomeMessage" />

    <TextView
        android:id="@+id/size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/size"
        style="@style/Text"
        app:layout_constraintTop_toBottomOf="@id/welcomeMessage"
        app:layout_constraintLeft_toRightOf="@id/colorTab" />

    <SeekBar
        android:id="@+id/seekBar"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/welcomeMessage"
        app:layout_constraintLeft_toRightOf="@id/size" />


    <TextView
        android:id="@+id/nameText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name: "
        android:labelFor="@id/nameEditText"
        app:layout_constraintLeft_toRightOf="@id/seekBar"
        app:layout_constraintTop_toBottomOf="@id/welcomeMessage" />

    <EditText
        android:id="@+id/nameEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:ems="5"
        android:importantForAutofill="no"
        app:layout_constraintLeft_toRightOf="@id/nameText"
        app:layout_constraintBaseline_toBaselineOf="@id/nameText"/>

    <edu.wallawalla.cs.sukaki.drawit.Drawit
        android:id="@+id/canvas"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/seekBar"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/addButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/plus_icon"
        android:onClick="onFilesClick"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:contentDescription="add" />
</androidx.constraintlayout.widget.ConstraintLayout>